@model Its.Systems.HR.Interface.Web.ViewModels.SessionSummaryStatisticsViewModel
@{
    ViewBag.Title = "SessionSummaryStatistics";

}

<div class="col-md-6">

    @using (Html.BeginForm("Details", "SessionSummaryStatistics", FormMethod.Post))
    {
        <div class="form-group">
            <label for="Activity">Aktiviteter</label>
            @Html.DropDownList("yearslist", new SelectList(Enumerable.Range(2010, 140).ToList()), "-- Select Year --", new { name = "yearslist" })

            <button type="submit" class="btn btn-default">Filtrera!</button>
        </div>


    }
    
    @if (@Model.SessionStatisticsRows != null)

    {

        <table class="table" id="sessionsinyear">
            @foreach (var item in Model.SessionStatisticsRows)
            {
                <tr>
                    <td>
                        @*<p>@Html.DisplayFor(modelItem => item.Session.Name), @Html.DisplayFor(modelItem => item.NumberOfParticipants) Deltagare</p>*@
                        <p>@Html.ActionLink(@item.Session.Name, "GetParticipants", "ActivitySummary", new { id = item.Session.Id }, null)   @item.NumberOfParticipants Deltagare</p>
                    </td>


                </tr>
            }
        </table>

    }


    
    

</div>