@model Its.Systems.HR.Interface.Web.ViewModels.ParticipantSummaryViewModel

@{
    ViewBag.Title = "Översikt person";
}

<h2>@Model.FullName</h2>

<div class="row">
    <div class="col-md-7">
        <h3 class="m-b-30">Deltagit på följande tillfällen</h3>
        @*<ul id="allSessionsForParticipant">
            
            @foreach (var session in Model.Sessions)
            {
                <li>
                    <a href="@Url.Action("Index", "Home")">@session.Name</a>
                    <span> (@session.StartDate.ToShortDateString())</span>
                    <span class="label label-warning listedParticipantRemove js-delete-sessionParticipant" data-sessionId="@session.Id" data-personId="@Model.PersonId">Ta bort</span>
                </li>
            }
        </ul>*@
        <table class="table" id="allSessionsForParticipant">
            @foreach (var session in Model.Sessions)
            {
                <tr>
                    <td>
                        <a href="@Url.Action("GetSession", "ActivitySummary", new {id = session.Id})">@session.Name</a>
                        <span> (@session.StartDate.ToShortDateString())</span>
                        <span class="label label-warning listedParticipantRemove js-delete-sessionParticipant" data-sessionId="@session.Id" data-personId="@Model.PersonId">Ta bort</span>
                    </td>
                </tr>
            }

        </table>
        
        

        <div id="statisticsSummary">
            @Html.Action("ParticipantStatisticSummary", new { personId = Model.PersonId })
        </div>

        <div class="m-t-30">
            @Html.DropDownListFor(n => n.Sessions.First().Id, Model.AllSessions, new { @class = "form-control wide-textbox" })
            @Html.ValidationMessageFor(model => model.Sessions, "", new { @class = "text-danger" })
            <button type="button" class="btn btn-default js-add-sessionParticipant" data-personId="@Model.PersonId">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Lägg till tillfälle för person
            </button>
        </div>

    </div>
    <div class="col-md-5">
        <h3 class="m-b-30">Allmän information</h3>
        <div>
            <div class="form-group">
                <label for="Comments" class="control-label">Kommentarer</label>
                @*@using (Html.BeginForm("SaveComments", "Participant", routeValues: new { personId = Model.PersonId }, method: FormMethod.Post))
                    {*@
                <div>
                    @Html.TextAreaFor(n => n.Comments, 10, 40, new { @class = "form-control commentsWishes" })
                    @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                    <button type="button" class="btn btn-default js-save-participantComment" data-personId="@Model.PersonId">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Spara kommentar
                    </button>
                </div>
                @*}*@
            </div>

            <div class="form-group">
                <label for="Wishes" class="control-label">Önskemål</label>
                @*@using (Html.BeginForm("SaveWishes", "Participant", routeValues: new { personId = Model.PersonId }, method: FormMethod.Post))
                    {*@
                <div>
                    @Html.TextAreaFor(n => n.Wishes, 10, 40, new { @class = "form-control commentsWishes" })
                    @Html.ValidationMessageFor(model => model.Wishes, "", new { @class = "text-danger" })
                    <button type="button" class="btn btn-default js-save-participantWish" data-personId="@Model.PersonId">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Spara önskemål
                    </button>
                </div>
                @*}*@
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>

        // TODO: Proper error handling

        $(document).ready(function () {

            $("body").on("click", ".js-delete-sessionParticipant", function (e) {
                var link = $(e.target);


                bootbox.confirm({
                    title: "Vänligen bekräfta",
                    message: "Vill du verkligen ta bort detta tillfälle för personen?",
                    buttons: {
                        cancel: {
                            label: '<i class="glyphicon glyphicon-remove"></i> Avbryt'
                        },
                        confirm: {
                            label: '<i class="glyphicon glyphicon-ok"></i> Ta bort',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: "@Url.Action("RemovePersonFromSession", "Activity")",
                                type: "POST",
                                data: { sessionId: link.attr("data-sessionId"), personId: link.attr("data-personId") },
                                success: function () {
                                    link.parents("tr")
                                        .fadeOut(function () {
                                            $(this).remove();

                                            $.ajax({
                                                url: "@Url.Action("ParticipantStatisticSummary", "Participant")",
                                                type: "GET",
                                                data: { personId: link.attr("data-personId") },
                                                success: function (result2) {
                                                    $("#statisticsSummary").html(result2);
                                                },
                                                error: function () {
                                                    alert("Anropet misslyckades, prova gärna igen.");
                                                }
                                            });
                                        });
                                },
                                error: function () {
                                    alert("Anropet misslyckades, prova gärna igen.");
                                }
                            });
                        }
                    }
                });

            });


            $(".js-add-sessionParticipant").click(function (e) {
                var link = $(e.target);
                var sessionId = $("#Id").val();


                $.ajax({
                    url: "@Url.Action("AddPersonToSession", "Activity")",
                    type: "POST",
                    data: { sessionId: sessionId, personId: link.attr("data-personId") },
                    success: function (result) {
                        if (result.Success) {
                            var html = '<tr><td><a href="/HrKompetensutveckling/ActivitySummary/GetParticipants/' + sessionId + '">' + result.SessionName + '</a><span> (' + result.StartDate + ') </span><span class="label label-warning listedParticipantRemove js-delete-sessionParticipant" data-sessionId="' + result.SessionId + '" data-personId="' + result.PersonId + '">Ta bort</span></tr></td>';
                            $(html).hide().appendTo("#allSessionsForParticipant").fadeIn();

                            $.ajax({
                                url: "@Url.Action("ParticipantStatisticSummary", "Participant")",
                                type: "GET",
                                data: { personId: link.attr("data-personId") },
                                success: function (result2) {
                                    $("#statisticsSummary").html(result2);
                                },
                                error: function () {
                                    alert("Anropet misslyckades, prova gärna igen.");
                                }
                            });

                        } else {
                            link.after(' <div class="alert alert-danger js-fadeOutThisMessage" role="alert">Tillfället redan tillagt!</div>');

                            $(".js-fadeOutThisMessage").fadeOut(2000, function () {
                                $(this).remove();
                            });
                        }
                    }
                });
            });

            $(".js-save-participantComment").click(function (e) {
                var link = $(e.target);
                var comments = $("#Comments").val();

                $.ajax({
                    url: "@Url.Action("SaveComments", "Participant")",
                    type: "POST",
                    data: { personId: link.attr("data-personId"), comments: comments },
                    success: function () {
                        link.after(' <span class="alert alert-success js-fadeOutThisMessage" role="alert">Sparat!</span>');

                        $(".js-fadeOutThisMessage").fadeOut(2000, function () {
                            $(this).remove();
                        });
                    },
                    error: function () {
                        alert("Anropet misslyckades, prova gärna igen.");
                    }
                });
            });

            $(".js-save-participantWish").click(function (e) {
                var link = $(e.target);
                var wishes = $("#Wishes").val();

                $.ajax({
                    url: "@Url.Action("SaveWishes", "Participant")",
                    type: "POST",
                    data: { personId: link.attr("data-personId"), wishes: wishes },
                    success: function () {
                        link.after(' <span class="alert alert-success js-fadeOutThisMessage" role="alert">Sparat!</span>');

                        $(".js-fadeOutThisMessage").fadeOut(2000, function () {
                            $(this).remove();
                        });
                    },
                    error: function () {
                        alert("Anropet misslyckades, prova gärna igen.");
                    }
                });
            });

        });
    </script>
}