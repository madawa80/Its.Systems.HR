@{
    ViewBag.Title = "aktiviteter";
}
 
<h2>aktiviteter</h2>

<p>
    @Html.ActionLink("Skapa aktivitet ", "Create")
</p>
@using (Html.BeginForm("Index", "Activity", FormMethod.Get))
{
    <p>
        Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        
        <input type="submit" value="Hitta aktivitet" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                @Html.ActionLink("radera", "Delete", new { id = item.Id})
            </td>
        </tr>
    }

</table>
