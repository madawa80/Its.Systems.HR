@model Its.Systems.HR.Interface.Web.ViewModels.FilterSessionsViewModel

@{
    ViewBag.Title = "FilterSessions";
}

<h2>Filtrera kurstillfällen <span class="badge">DEBUG</span></h2>

@using (Html.BeginForm("FilterSessions", "Activity", FormMethod.Get))
{
    <div class="well-lg">
        <label for="SearchString">Filtrera kurstillfällen på namn:</label>
        <div class="form-inline">
            <div class="form-group">
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, htmlAttributes: new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-default">Filtrera!</button>
        </div>

        @*<a href="@Url.Action("Index")" class="btn btn-danger">Återställ</a>*@
    </div>
}

<table class="table">
    <tr>
        <th>Namn</th>
        <th>Start</th>
        <th>Slut</th>
        <th>Hr-Person</th>
        <th>Plats</th>
    </tr>

@foreach (var session in Model.Sessions) {
    <tr>
        <td>
            @session.Name
        </td>
        <td>
            @session.StartDate
        </td>
        <td>
            @session.EndDate
        </td>
        <td>
            @session.HrPerson.FullName
        </td>
        <td>
            @session.Location.Name
        </td>
    </tr>
}

</table>
