@model Its.Systems.HR.Interface.Web.ViewModels.ParticipantViewModel
@*@model Its.Systems.HR.Interface.Web.ViewModels.CreateSessionViewModel*@*
@*@model Its.Systems.HR.Interface.Web.ViewModels.SessionPaticipantsViewModel*@
<div class="col-md-12">
    <h2><strong>@Model.SessionName</strong> <button class="btn btn-warning">Editera kurstillfälle</button> <button class="btn btn-danger">Ta bort kurstillfälle</button></h2>
</div>


<div class="col-md-6">
    @using (Html.BeginForm("Index", "Participant", FormMethod.Post))
    {
    <h3 class="m-b-30">Deltagare</h3>

    <div class="form-group">
        <label for="Participant_Id">Lägg till deltagare</label>
        <div>
            @Html.DropDownListFor(model => model.Participants.First().Id, (IEnumerable<SelectListItem>) ViewBag.SessionParticipantId, new {@class = "form-control"})

            @Html.ValidationMessageFor(model => model.Participants.First().Id, "", new {@class = "text-danger"})
            <button type="button" class="btn btn-default js-add-participantBeforeSessionExists">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Lägg till deltagare
            </button>
        </div>
    </div>
    }
    @*<div>
            <div></div>
            <ul id="selectedParticipants">
                @Html.HiddenFor(n => n.AddedParticipants)
            </ul>
        </div>*@

    <table class="table">

        @foreach (var item in Model.Participants)
        {
            <tr>
                <td>

                    @Html.ActionLink(@item.FullName, "Details", "Participant", new {id = item.Id}, null)
                </td>
            </tr>
        }

    </table>

    <em>Totalt antal deltagare: @Model.TotalPaticipants</em>


</div>


<div class="col-md-6">
    <h3 class="m-b-30">Allmän information</h3>
    <div>

        <div class="panel panel-default wide-textbox">
            <div class="panel-body">
                @if (Model.HrPerson != null)
                {
                    <p>Ansvarig HR:  @Model.HrPerson.FullName</p>
                }
                @if (Model.Location != null)
                {
                    <p>Plats: @Model.Location.Name</p>
                    <p>Adress: @Model.Location.Address</p>
                }
                <p>Startdatum: @Model.StartDate.ToString("dd MMM yyyy HH:mm")</p>
                <p>Slutdatum: @Model.EndDate.ToString("dd MMM yyyy HH:mm")</p>
            </div>
        </div>

        <div class="form-group">
            <label for="Comments" class="control-label">Kommentarer</label>
            <div>
                @Html.TextAreaFor(n => n.Comments, 10, 40, new { @class = "form-control commentsWishes" })
                @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                <button type="button" class="btn btn-default js-save-sessionComment" data-sessionId="@Model.SessionId">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Spara kommentar
                </button>
            </div>
        </div>

        <div class="form-group">
            <label for="Evaluation" class="control-label">Utvärdering</label>
            <div>
                @Html.TextAreaFor(n => n.Evaluation, 10, 40, new { @class = "form-control commentsWishes" })
                @Html.ValidationMessageFor(model => model.Evaluation, "", new { @class = "text-danger" })
                <button type="button" class="btn btn-default js-save-sessionEvaluation" data-sessionId="@Model.SessionId">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Spara Utvärdering
                </button>
            </div>
        </div>

    </div>

</div>

@section scripts {

    <script>
        
    // Array holding participants added "on-the-fly"
        var listOfParticiantsThatParticipated = [];

        $('.js-add-participantBeforeSessionExists').on('click', function (e) {
            var link = $(e.target);
            var resultName = $('#Participant_Id :selected').text();
            var resultId = $('#Participant_Id').val();

            if ($.inArray(resultId, listOfParticiantsThatParticipated) > -1) {

                link.after(' <span class="alert alert-danger js-fadeOutThisMessage" role="alert">Redan tillagd!</span>');
                $(".js-fadeOutThisMessage").fadeOut(2000, function () {
                    $(this).remove();
                });
                return;
            }

            listOfParticiantsThatParticipated.push(resultId);
            $('#AddedParticipants').val(listOfParticiantsThatParticipated);

            var html = '<li data-personId="' +
                resultId +
                '"><span class="listedParticipantLink">' +
                resultName +
                '</span><span> </span><span class="badge js-remove-participantBeforeSessionExists listedParticipantRemove"> x </span></li>';
            $(html).hide().appendTo("#selectedParticipants").fadeIn();

            //console.log(listOfParticiantsThatParticipated);
        });

        $('body').on('click', '.js-remove-participantBeforeSessionExists', function (e) {

            var link = $(e.target);
            // get parent li data-personId
            var resultId = link.parents("li").attr("data-personId");

            var index = listOfParticiantsThatParticipated.indexOf(resultId);
            if (index > -1) {
                listOfParticiantsThatParticipated.splice(index, 1);
                $('#AddedParticipants').val(listOfParticiantsThatParticipated);

                link.parents("li")
                                .fadeOut(function () {
                                    $(this).remove();
                                });
            }

        });

        $('body').on('click', '.listedParticipantLink', function (e) {

            var link = $(e.target);
            // get parent li data-personId
            var resultId = link.parents("li").attr("data-personId");

            var url = "@Url.Action("Details", "Participant")" + "/" + resultId;
            window.open(
                      url,
                      "_blank"
                    );
        });

        function getPaticipants(_SessionId) {
            var url = "@Url.Action("GetParticipants", "ActivitySummary")";

            $.ajax({
                url: url,
                data: { sessionId: _SessionId },
                cache: false,
                type: "POST",
                success: function (data) {
                    $("#participantsPartial").html(data);
                },
                error: function (reponse) {
                    alert("error : " + reponse);
                }
            });

        }


        //$(document).ready(function () {
        

            $("body").on("click", ".js-save-sessionComment", function (e) {
                var link = $(e.target);
                var comments = $("#Comments").val();

                $.ajax({
                    url: "@Url.Action("SaveComments", "ActivitySummary")",
                    type: "POST",
                    data: { sessionId: link.attr("data-sessionId"), comments: comments },
                    success: function () {
                        link.after(' <span class="alert alert-success js-fadeOutThisMessage" role="alert">Kommentarer sparade!</span>');

                        $(".js-fadeOutThisMessage").fadeOut(2000, function () {
                            $(this).remove();
                        });
                    },
                    error: function () {
                        alert("Anropet misslyckades, prova gärna igen.");
                    }
                });
            });

        $(document).ready(function () {
            $("body").on("click", ".js-save-sessionEvaluation", function (e) {
                var link = $(e.target);
                var evaluation = $("#Evaluation").val();

                $.ajax({
                    url: "@Url.Action("SaveEvaluation", "ActivitySummary")",
                    type: "POST",
                    data: { sessionId: link.attr("data-sessionId"), evaluation: evaluation },
                    success: function () {
                        link.after(' <span class="alert alert-success js-fadeOutThisMessage" role="alert">Utvärdering sparade!</span>');

                        $(".js-fadeOutThisMessage").fadeOut(2000, function () {
                            $(this).remove();
                        });
                    },
                    error: function () {
                        alert("Anropet misslyckades, prova gärna igen.");
                    }
                });
            });

        });
    </script>
}


